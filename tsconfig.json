{
    "compilerOptions": {
        "target": "ESNEXT",
        "outDir": "./build",
        "rootDir": "./src",
        "alwaysStrict": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    // "exclude": ["node_modules"],
    "include": ["./src/**/*", "./src/.env"]
}
